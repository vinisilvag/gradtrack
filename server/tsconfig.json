{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@/tests/*": [
        "./tests/*",
      ]
    },
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/@types",
    //   "./node_modules"
    // ],
    // "types": [
    //   "vitest/globals"
    // ],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}